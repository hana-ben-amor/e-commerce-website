{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
 
    <h1>List of Categories</h1>
     
    </br>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for cat in categories %}
            <tr>
                <td>{{ cat.id }}</td>
                <td>{{ cat.name }}</td>
                <td>
                    <a href="{{ path('app_update_category', {'id': cat.id}) }}" class="btn btn-primary">
                        Edit
                    </a>
                    <a onclick="return confirm('Do you really want do delete this category ?')" href="{{ path('app_delete_category', {'id': cat.id}) }}" class="btn btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="3">No categories found for the moment, sorry! ❤️</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_new_category') }}" class="btn btn-outline-primary mb-3">
        Add Category
    </a>
</div>
{% endblock %}
